ragflow:
  host: ${RAGFLOW_HOST:-0.0.0.0}
  http_port: 9380
admin:
  host: ${RAGFLOW_HOST:-0.0.0.0}
  http_port: 9381
mysql:
  name: '${MYSQL_DBNAME:-rag_flow}'
  user: '${MYSQL_USER:-root}'
  password: '${MYSQL_PASSWORD:-infini_rag_flow}'
  host: '${MYSQL_HOST:-mysql}'
  port: 3306
  max_connections: 900
  stale_timeout: 300
  max_allowed_packet: ${MYSQL_MAX_PACKET:-1073741824}
minio:
  user: '${MINIO_USER:-rag_flow}'
  password: '${MINIO_PASSWORD:-infini_rag_flow}'
  host: '${MINIO_HOST:-minio}:${MINIO_PORT:-9000}'
  bucket: '${MINIO_BUCKET:-}'
  prefix_path: '${MINIO_PREFIX_PATH:-}'
os:
  hosts: 'http://${ES_HOST:-es01}:${ES_PORT:-9200}'
  username: ''
  password: ''
redis:
  db: 1
  username: '${REDIS_USERNAME:-}'
  password: '${REDIS_PASSWORD:-infini_rag_flow}'
  host: '${REDIS_HOST:-redis}:${REDIS_PORT:-6379}'
oauth:
  oidc:
    display_name: "Authentik"
    client_id: "${OIDC_CLIENT_ID}"
    client_secret: "${OIDC_CLIENT_SECRET}"
    issuer: "https://auth.sjanglab.org/application/o/ragflow/"
    scope: "openid email profile"
    redirect_uri: "https://rag.sjanglab.org/v1/user/oauth/callback/oidc"
# LLM defaults for new users
# Chat: vLLM on psi, Embedding/Rerank: TEI on psi
user_default_llm:
  default_models:
    chat_model:
      name: 'Qwen/Qwen3-32B-AWQ'
      factory: 'VLLM'
      api_key: 'none'
      base_url: 'https://vllm.sjanglab.org/v1'
    embedding_model:
      name: 'BAAI/bge-m3'
      factory: 'VLLM'
      api_key: 'none'
      base_url: 'https://tei.sjanglab.org/v1'
    rerank_model:
      name: 'BAAI/bge-reranker-v2-m3'
      factory: 'HuggingFace'
      api_key: 'none'
      base_url: 'https://tei.sjanglab.org'
